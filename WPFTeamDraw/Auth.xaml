<Window x:Name="AuthForm" x:Class="WPFTeamDraw.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connection window" Height="206.714" Width="233.216" ResizeMode="NoResize">
    <Grid Margin="0,0,2,-2">
        <TextBox x:Name="ServerIP" HorizontalAlignment="Left" Height="25" Margin="70,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" Text="127.0.0.1"/>
        <Label Content="IP" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" Height="25" Width="60" HorizontalContentAlignment="Center"/>
        <Label Content="Port" HorizontalAlignment="Left" Margin="24,79,0,0" VerticalAlignment="Top" Height="25" HorizontalContentAlignment="Center"/>
        <Button x:Name="ConnectButton" Content="Connect" HorizontalAlignment="Left" Margin="67,127,0,0" VerticalAlignment="Top" Width="97" Height="26" Click="ConnectButton_Click"/>
        <TextBox x:Name="ServerPort" HorizontalAlignment="Left" Height="25" Margin="70,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="126" Text="25565"/>

    </Grid>
</Window>
